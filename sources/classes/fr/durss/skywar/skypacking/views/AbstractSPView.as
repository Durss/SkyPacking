package fr.durss.skywar.skypacking.views {	import gs.TweenLite;	import com.nurun.structure.mvc.views.AbstractView;	import flash.events.Event;	import flash.filters.BlurFilter;	/**	 * Abstract class for views.<br>	 * <br>	 * It just provides some static values, opening/close methods, and automatic	 * call of initialize(() method on ADDED_TO_STAGE event.	 * 	 * @author  Francois	 */	public class AbstractSPView extends AbstractView {				protected const WIDTH:int		= 320;		protected const HEIGHT:int		= 360;				protected const CELL_SIZE:int	= 20;		protected const COLS:int		= 15;		protected const ROWS:int		= 15;				protected var _opened:Boolean;								/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>AbstractSPView</code>.<br>		 */		public function AbstractSPView() {			addEventListener(Event.ADDED_TO_STAGE, initialize);		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/* ****** *		 * PUBLIC *		 * ****** */		/**		 * Opens the view.		 */		public function open():void {			if(_opened) return;			_opened = true;			mouseEnabled = true;			mouseChildren = true;			TweenLite.to(this, .5, {autoAlpha:1, overwrite:0, blurFilter:{blurX:0, blurY:0, remove:true}});		}				/**		 * Closes the view.		 */		public function close():void {			if(!_opened) return;			_opened = false;			mouseEnabled = false;			mouseChildren = false;			TweenLite.to(this, .5, {autoAlpha:0, overwrite:0, blurFilter:{blurX:20, blurY:20}});		}								/* ******* *		 * PRIVATE *		 * ******* */		/**		 * Initialize the class.<br>		 */		protected function initialize(e:Event):void {			removeEventListener(Event.ADDED_TO_STAGE, initialize);			alpha = 0;			visible = false;			filters = [new BlurFilter(20, 20, 3)];		}			}}