package fr.durss.skywar.skypacking.views {	import fr.durss.skywar.skypacking.data.Model;	import fr.durss.skywar.skypacking.data.SkinMetrics;	import fr.durss.skywar.skypacking.graphics.WindowGraphics;	import com.nurun.structure.mvc.model.events.IModelEvent;	import flash.events.Event;	/**	 * 	 * @author  Francois	 */	public class Background extends AbstractSPView {				private var _background:WindowGraphics;								/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>Background</code>.<br>		 */		public function Background() {			super();		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/* ****** *		 * PUBLIC *		 * ****** */		override public function update(e:IModelEvent):void {			var model:Model = e.model as Model;			model;			open();		}						/* ******* *		 * PRIVATE *		 * ******* */		/**		 * Initialize the class.<br>		 */		override protected function initialize(e:Event):void {			super.initialize(e);			_background	= addChild(new WindowGraphics()) as WindowGraphics;			_background.gotoAndStop(SkinMetrics.getInstance().frame);			_background.width	= WIDTH;			_background.height	= HEIGHT;		}			}}