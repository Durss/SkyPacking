package fr.durss.skywar.skypacking.graphics {	import com.jidd.display.DashedLine;	import flash.display.Sprite;		/**	 * Draws a dotted square.	 * 	 * @author  Francois	 */	public class DottedRectangle extends Sprite {		private var _height:Number;		private var _width:Number;		private var _exLines:Array;								/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>DottedSquare</code>.<br>		 */		public function DottedRectangle(w:int, h:int) {			_width	= w;			_height	= h;			draw();		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/**		 * Sets the square's width.<br>		 */		override public function set width(value:Number):void { _width = value; draw(); }				/**		 * Sets the square's height.<br>		 */		override public function set height(value:Number):void { _height = value; draw();}						/* ****** *		 * PUBLIC *		 * ****** */						/* ******* *		 * PRIVATE *		 * ******* */		/**		 * Draw the lines.<br>		 */		private function draw():void {			var line:DashedLine, i:int, len:int, color:String;			color = "CC0000";			if(_exLines != null) {				len = _exLines.length;				for(i = 0; i < len; ++i) {					removeChild(_exLines[i]);				}			}			_exLines = [];						line = addChild(new DashedLine(1, 1, _width, 1, color)) as DashedLine;			_exLines.push(line);						line = addChild(new DashedLine(1, 1, _width, 1, color)) as DashedLine;			line.y = _height;			_exLines.push(line);						line = addChild(new DashedLine(1, 1, _height, 1, color)) as DashedLine;			line.rotation = 90;			_exLines.push(line);						line = addChild(new DashedLine(1, 1, _height, 1, color)) as DashedLine;			line.x = _width;			line.rotation = 90;			_exLines.push(line);						graphics.beginFill(0xE2610C, .7);			graphics.drawRect(1, 2, _width - 3, _height - 3);		}			}}