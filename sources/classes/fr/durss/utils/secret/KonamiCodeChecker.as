package fr.durss.utils.secret {	import flash.display.Stage;	import flash.events.Event;	import flash.events.EventDispatcher;	import flash.events.KeyboardEvent;	/**	 * Checks if the konami code has been done by the user.<br>	 * <br>	 * The konami code is :<br>	 *  UP UP DOWN DOWN LEFT RIGHT LEFT RIGHT B A	 * 	 * @author  Francois	 */	public class KonamiCodeChecker extends EventDispatcher {		private var _stage:Stage;		private var _code:Array = [38,38,40,40,37,39,37,39,66,65];		private var _pointer:int;								/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>KonamiCodeChecker</code>.		 */		public function KonamiCodeChecker(stage:Stage) {			_stage = stage;			initialize();		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/* ****** *		 * PUBLIC *		 * ****** */						/* ******* *		 * PRIVATE *		 * ******* */		/**		 * Initialize the class.		 */		private function initialize():void {			_stage.addEventListener(KeyboardEvent.KEY_UP, keyUpHandler);		}				/**		 * Called when a key is released.		 */		private function keyUpHandler(e:KeyboardEvent):void {			if(e.keyCode == _code[_pointer]) {				if(++ _pointer ==_code.length){					dispatchEvent(new Event(Event.ACTIVATE));				}			}else {				_pointer = 0;			}		}	}}